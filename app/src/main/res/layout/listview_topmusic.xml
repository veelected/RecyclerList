<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@android:color/holo_blue_bright"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:minWidth="48dp"
            android:layout_marginStart="90dp"
            android:layout_marginBottom="55dp"
            android:textAlignment="textEnd"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/tv_songTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:paddingTop="30dp"
            android:textAlignment="viewStart"
            android:textColor="@android:color/black"
            android:textStyle="bold"

            tools:text="Name" />

        <TextView
            android:id="@+id/tv_artist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:paddingTop="10dp"
            android:textAlignment="viewStart"
            android:textStyle="bold"

            tools:text="Artist" />

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="16dp"
            android:paddingTop="35dp"
            tools:text="Collections.shuffle(friendArrayList);Collections.shuffle(friendArrayList);Collections.shuffle(friendArrayList);Collections.shuffle(friendArrayList);Collections.shuffle(friendArrayList);Collections.shuffle(friendArrayList);Collections.shuffle(friendArrayList);" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>